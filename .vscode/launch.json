      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "description": "Enable pretty printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "Tests: Build (make test)"
    }
  ]
